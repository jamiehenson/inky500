---
import { cn } from "@/lib/utils";
import { cva } from "class-variance-authority";

const badgeVariants = cva(
  "inline-flex items-center rounded-full border border-neutral-200 px-2.5 py-0.5 text-xs font-semibold transition-colors focus:outline-none focus:ring-2 focus:ring-neutral-950 focus:ring-offset-2 dark:border-neutral-800 dark:focus:ring-neutral-300",
  {
    variants: {
      variant: {
        default:
          "border-transparent bg-neutral-900 text-neutral-100 hover:bg-neutral-700 dark:bg-neutral-100 dark:text-neutral-900 dark:hover:bg-neutral-200",
        secondary:
          "border-transparent bg-neutral-100 text-neutral-900 hover:bg-neutral-300 dark:bg-neutral-800 dark:text-neutral-100 dark:hover:bg-neutral-600",
        destructive:
          "border-transparent bg-red-500 text-neutral-100 hover:bg-red-700 dark:bg-red-900 dark:text-neutral-100 dark:hover:bg-red-700",
        outline:
          "text-neutral-900 dark:text-neutral-100 hover:text-neutral-700 dark:hover:text-neutral-300",
      },
    },
    defaultVariants: {
      variant: "default",
    },
  }
);

const { className, variant } = Astro.props;
---

<div class={cn(badgeVariants({ variant }), className)}><slot /></div>
