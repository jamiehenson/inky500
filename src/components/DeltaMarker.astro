---
import * as Icon from "@astropub/icons";

type Props = {
  delta: number;
};

const { delta } = Astro.props;
---

<div class="flex items-center text-green-500 gap-1">
  {
    delta > 0 ? (
      <Icon.ChevronUp size="24" class="stroke-green-500" />
    ) : delta < 0 ? (
      <Icon.ChevronDown size="24" class="stroke-red-500" />
    ) : (
      <Icon.Minus size="24" class="stroke-gray-500" />
    )
  }

  <span class="font-bold">{delta !== 0 ? Math.abs(delta) : null}</span>
</div>
